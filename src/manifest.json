{
	"name": "__MSG_extName__",
	"version": "1.2.0",
	"manifest_version": 2,

	"description": "__MSG_extDesc__",
	"default_locale": "en",
	"icons": {
		"128": "icon-128.png",
		"16": "icon-128.png",
		"48": "icon-128.png"
